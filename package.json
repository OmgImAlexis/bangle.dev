{
  "name": "bangle",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "bangle-core",
    "bangle-play",
    "bangle-plugins"
  ],
  "scripts": {
    "start": "yarn workspace bangle-play start",
    "test": "yarn lint && yarn unit-tests && yarn integration-tests",
    "unit-tests": "yarn jest",
    "integration-tests": "yarn jest --config=jest-integration.config.js",
    "lint": "yarn prettier --check . && yarn eslint .",
    "root:lint": "yarn lint"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint",
      "yarn prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./scripts/pre-push.sh $HUSKY_GIT_PARAMS"
    }
  },
  "resolutions": {
    "prosemirror-commands": "1.1.4",
    "prosemirror-keymap": "1.1.4",
    "prosemirror-model": "1.11.0",
    "prosemirror-state": "1.3.3",
    "prosemirror-view": "^1.15.2",
    "prosemirror-transform": "1.2.7",
    "prosemirror-utils/prosemirror-tables": "0.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-eslint": "10.x",
    "babel-jest": "^26.3.0",
    "eslint": "^7.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "expect-puppeteer": "^4.4.0",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "jest-circus": "^26.6.0",
    "jest-environment-puppeteer": "^4.4.0",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.1",
    "puppeteer": "^5.3.0"
  }
}
